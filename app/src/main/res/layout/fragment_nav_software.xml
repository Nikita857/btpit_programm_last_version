<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_software">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/po"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="240dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:columnCount="2">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="147dp"
                        android:layout_height="89dp"
                        android:src="@drawable/android"
                        app:layout_column="0"
                        app:layout_row="0" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="227dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="10dp"
                        android:text="Android Studio - интегрированная среда для работы с платформой Android"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="128dp"
                        android:src="@drawable/netbens"
                        app:layout_column="0"
                        app:layout_row="1" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="227dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Apache NetBeans - свободная интегрированная среда разработки приложений на различных языках программирования"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_column="1"
                        app:layout_row="1" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="181dp"
                        android:layout_height="135dp"
                        android:src="@drawable/eclipse"
                        app:layout_column="0"
                        app:layout_row="2" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="227dp"
                        android:layout_height="136dp"
                        android:layout_marginBottom="10dp"
                        android:text="Eclipse IDE for Java Developers - свободная интегрированная среда разработки модульных кроссплатформенных приложений "
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_column="1"
                        app:layout_row="2" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/xd"
                        app:layout_column="0"
                        app:layout_row="3" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="231dp"
                        android:layout_height="97dp"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="18dp"
                        android:text="Adobe XD - программа для разработки интерфейсов"
                        android:textAlignment="gravity"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_column="1"
                        app:layout_row="3" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="109dp"
                        android:src="@drawable/photoshop"
                        app:layout_column="0"
                        app:layout_row="4" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="231dp"
                        android:layout_height="111dp"
                        android:layout_marginBottom="10dp"
                        android:text="Adobe Photoshop - это мощный набор набор инструментов для обработки цифровых изображений"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_column="1"
                        app:layout_row="4" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="wrap_content"
                        android:layout_height="214dp"
                        android:src="@drawable/illus"
                        app:layout_column="0"
                        app:layout_row="5" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="234dp"
                        android:layout_height="217dp"
                        android:text="Adobe Illustarator - это программное обеспечение для создания векторной графики которую можно уменьшить до размеров экрана смартфона или увеличить до размера билборда без ущерба для качества и четкости изображения"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_column="1"
                        app:layout_row="5" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="wrap_content"
                        android:layout_height="128dp"
                        android:src="@drawable/visual"
                        app:layout_column="0"
                        app:layout_row="6" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:text="Microsoft Visual Studio Community данные продукты позволяют разрабатывать как консольные так и обычные приложения "
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_column="1"
                        app:layout_row="6" />

                </androidx.gridlayout.widget.GridLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>